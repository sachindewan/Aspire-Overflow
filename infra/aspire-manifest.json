{
  "$schema": "https://json.schemastore.org/aspire-8.0.json",
  "resources": {
    "compose": {
      "error": "This resource does not support generation in the manifest."
    },
    "TypeSense-Api-Key": {
      "type": "parameter.v0",
      "value": "{TypeSense-Api-Key.inputs.value}",
      "inputs": {
        "value": {
          "type": "string",
          "secret": true
        }
      }
    },
    "messaging": {
      "type": "container.v1",
      "connectionString": "amqp://guest:{messaging-password.value}@{messaging.bindings.tcp.host}:{messaging.bindings.tcp.port}",
      "image": "docker.io/library/rabbitmq:4.1-management",
      "env": {
        "RABBITMQ_DEFAULT_USER": "guest",
        "RABBITMQ_DEFAULT_PASS": "{messaging-password.value}"
      },
      "bindings": {
        "tcp": {
          "scheme": "tcp",
          "protocol": "tcp",
          "transport": "tcp",
          "targetPort": 5672
        },
        "management": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http",
          "port": 15427,
          "targetPort": 15672
        }
      }
    },
    "keycloak": {
      "type": "container.v1",
      "image": "quay.io/keycloak/keycloak:26.2",
      "args": [
        "start",
        "--import-realm"
      ],
      "volumes": [
        {
          "name": "keycloak-data",
          "target": "/opt/keycloak/data",
          "readOnly": false
        }
      ],
      "env": {
        "KC_BOOTSTRAP_ADMIN_USERNAME": "admin",
        "KC_BOOTSTRAP_ADMIN_PASSWORD": "{keycloak-password.value}",
        "KC_HEALTH_ENABLED": "true"
      },
      "bindings": {
        "http": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http",
          "port": 6001,
          "targetPort": 8080
        },
        "management": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http",
          "targetPort": 9000
        }
      }
    },
    "postgres": {
      "type": "container.v1",
      "connectionString": "Host={postgres.bindings.tcp.host};Port={postgres.bindings.tcp.port};Username=postgres;Password={postgres-password.value}",
      "image": "docker.io/library/postgres:17.6",
      "volumes": [
        {
          "name": "postgres-data",
          "target": "/var/lib/postgresql/data",
          "readOnly": false
        }
      ],
      "env": {
        "POSTGRES_HOST_AUTH_METHOD": "scram-sha-256",
        "POSTGRES_INITDB_ARGS": "--auth-host=scram-sha-256 --auth-local=scram-sha-256",
        "POSTGRES_USER": "postgres",
        "POSTGRES_PASSWORD": "{postgres-password.value}"
      },
      "bindings": {
        "tcp": {
          "scheme": "tcp",
          "protocol": "tcp",
          "transport": "tcp",
          "targetPort": 5432
        }
      }
    },
    "typesense": {
      "type": "container.v1",
      "image": "typesense/typesense:29.0",
      "args": [
        "--data-dir",
        "data",
        "--api-key",
        "{TypeSense-Api-Key.value}",
        "--enable-cors"
      ],
      "volumes": [
        {
          "name": "typesense-data",
          "target": "/data",
          "readOnly": false
        }
      ],
      "bindings": {
        "typesense": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http",
          "targetPort": 8108
        }
      }
    },
    "questionDb": {
      "type": "value.v0",
      "connectionString": "{postgres.connectionString};Database=question"
    },
    "question-svc": {
      "type": "project.v1",
      "path": "../QuestionService/QuestionService.csproj",
      "env": {
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EXCEPTION_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EVENT_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_RETRY": "in_memory",
        "ASPNETCORE_FORWARDEDHEADERS_ENABLED": "true",
        "HTTP_PORTS": "{question-svc.bindings.http.targetPort}",
        "services__keycloak__http__0": "{keycloak.bindings.http.url}",
        "services__keycloak__management__0": "{keycloak.bindings.management.url}",
        "ConnectionStrings__questionDb": "{questionDb.connectionString}",
        "ConnectionStrings__messaging": "{messaging.connectionString}",
        "OTEL_EXPORTER_OTLP_ENDPOINT": "{compose-dashboard.bindings.otlp-grpc.url}",
        "OTEL_EXPORTER_OTLP_PROTOCOL": "grpc",
        "OTEL_SERVICE_NAME": "question-svc"
      },
      "bindings": {
        "http": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http"
        },
        "https": {
          "scheme": "https",
          "protocol": "tcp",
          "transport": "http"
        }
      }
    },
    "search-svc": {
      "type": "project.v1",
      "path": "../SearchService/SearchService.csproj",
      "env": {
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EXCEPTION_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EVENT_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_RETRY": "in_memory",
        "ASPNETCORE_FORWARDEDHEADERS_ENABLED": "true",
        "HTTP_PORTS": "{search-svc.bindings.http.targetPort}",
        "services__typesense__typesense__0": "{typesense.bindings.typesense.url}",
        "ConnectionStrings__messaging": "{messaging.connectionString}",
        "typesense-api-key": "{TypeSense-Api-Key.value}",
        "OTEL_EXPORTER_OTLP_ENDPOINT": "{compose-dashboard.bindings.otlp-grpc.url}",
        "OTEL_EXPORTER_OTLP_PROTOCOL": "grpc",
        "OTEL_SERVICE_NAME": "search-svc"
      },
      "bindings": {
        "http": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http"
        },
        "https": {
          "scheme": "https",
          "protocol": "tcp",
          "transport": "http"
        }
      }
    },
    "gateway": {
      "type": "container.v1",
      "image": "mcr.microsoft.com/dotnet/nightly/yarp:2.3.0-preview.4",
      "entrypoint": "dotnet",
      "args": [
        "/app/yarp.dll"
      ],
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Production",
        "services__question-svc__http__0": "{question-svc.bindings.http.url}",
        "REVERSEPROXY__ROUTES__route0__MATCH__PATH": "/questions/{**catch-all}",
        "REVERSEPROXY__ROUTES__route0__CLUSTERID": "cluster_question-svc",
        "REVERSEPROXY__ROUTES__route1__MATCH__PATH": "/tags/{**catch-all}",
        "REVERSEPROXY__ROUTES__route1__CLUSTERID": "cluster_question-svc",
        "REVERSEPROXY__ROUTES__route2__MATCH__PATH": "/search/{**catch-all}",
        "REVERSEPROXY__ROUTES__route2__CLUSTERID": "cluster_search-svc",
        "REVERSEPROXY__CLUSTERS__cluster_question-svc__DESTINATIONS__destination1__ADDRESS": "https\u002Bhttp://question-svc",
        "REVERSEPROXY__CLUSTERS__cluster_search-svc__DESTINATIONS__destination1__ADDRESS": "https\u002Bhttp://search-svc",
        "services__question-svc__https__0": "{question-svc.bindings.https.url}",
        "services__search-svc__http__0": "{search-svc.bindings.http.url}",
        "services__search-svc__https__0": "{search-svc.bindings.https.url}",
        "ASPNETCORE_URLS": "http://*:8001",
        "OTEL_EXPORTER_OTLP_ENDPOINT": "{compose-dashboard.bindings.otlp-grpc.url}",
        "OTEL_EXPORTER_OTLP_PROTOCOL": "grpc",
        "OTEL_SERVICE_NAME": "gateway"
      },
      "bindings": {
        "http": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http",
          "targetPort": 5000
        },
        "gateway": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http",
          "targetPort": 8001,
          "external": true
        }
      }
    },
    "messaging-password": {
      "type": "parameter.v0",
      "value": "{messaging-password.inputs.value}",
      "inputs": {
        "value": {
          "type": "string",
          "secret": true,
          "default": {
            "generate": {
              "minLength": 22,
              "special": false
            }
          }
        }
      }
    },
    "keycloak-password": {
      "type": "parameter.v0",
      "value": "{keycloak-password.inputs.value}",
      "inputs": {
        "value": {
          "type": "string",
          "secret": true,
          "default": {
            "generate": {
              "minLength": 22
            }
          }
        }
      }
    },
    "postgres-password": {
      "type": "parameter.v0",
      "value": "{postgres-password.inputs.value}",
      "inputs": {
        "value": {
          "type": "string",
          "secret": true,
          "default": {
            "generate": {
              "minLength": 22
            }
          }
        }
      }
    },
    "compose-dashboard": {
      "type": "container.v1",
      "image": "mcr.microsoft.com/dotnet/nightly/aspire-dashboard:latest",
      "bindings": {
        "http": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http",
          "port": 8080,
          "targetPort": 18888,
          "external": true
        },
        "otlp-grpc": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http",
          "targetPort": 18889
        }
      }
    }
  }
}